# Flow AI Platform Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# API Keys (Required)
# =============================================================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key - Get from https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google AI API Key - Get from https://ai.google.dev/
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Database URL
DATABASE_URL=postgresql://flowai_user:flowai_pass@localhost:5432/flowai

# Redis Cache URL
REDIS_URL=redis://localhost:6379

# Qdrant Vector Database URL
QDRANT_URL=http://localhost:6333

# =============================================================================
# Security & Authentication
# =============================================================================

# JWT Secret Key (Generate with: openssl rand -hex 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration (in minutes)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing settings
BCRYPT_ROUNDS=12

# =============================================================================
# n8n Workflow Engine
# =============================================================================

# n8n Basic Auth
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=flowai_n8n_2024

# n8n Webhook URL
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# =============================================================================
# Frontend Configuration
# =============================================================================

# Next.js API URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =============================================================================
# Email Configuration (Optional)
# =============================================================================

# SMTP Settings for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@flowai.com

# =============================================================================
# File Storage (Optional - defaults to local storage)
# =============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=flowai-uploads
AWS_REGION=us-east-1

# =============================================================================
# Monitoring & Logging
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=your-sentry-dsn-here

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Development Settings
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Enable debug mode
DEBUG=true

# Disable CORS in development
DISABLE_CORS=true

# =============================================================================
# iOS App Configuration
# =============================================================================

# iOS App API Configuration
IOS_API_URL=http://localhost:8000
IOS_WS_URL=ws://localhost:8000

# Push notification settings
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id
APNS_BUNDLE_ID=com.flowai.platform

# =============================================================================
# Third-Party Integrations
# =============================================================================

# Gmail API
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Google Calendar API
GOOGLE_CALENDAR_CLIENT_ID=your-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-calendar-client-secret

# Slack API
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Microsoft Graph API
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# =============================================================================
# Performance & Scaling
# =============================================================================

# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Redis connection pool
REDIS_MAX_CONNECTIONS=100

# API rate limiting
RATE_LIMIT_PER_MINUTE=100

# File upload limits (in MB)
MAX_FILE_SIZE=25

# =============================================================================
# Security Headers
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security headers
SECURE_HEADERS=true

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
ENABLE_AGENT_BUILDER=true
ENABLE_WORKFLOW_BUILDER=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_MOBILE_APP=true
ENABLE_ANALYTICS=true

# =============================================================================
# Backup & Recovery
# =============================================================================

# Database backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

# S3 backup bucket
BACKUP_S3_BUCKET=flowai-backups